    border-top-style: solid;
    margin: -2.5px 0 -2.5px 5px;
    box-sizing: inherit;
  }
}

.lang-icon {
  margin-right: 0.8rem;
  img {
    width: 1.6rem;
    height: 1.2rem;
    margin: 0 0.1rem 0.1rem 0;
  }
}

.protect {
  margin: 0 auto;
}

.my-gallery figcaption {
  display: none;
}

fieldset legend {
