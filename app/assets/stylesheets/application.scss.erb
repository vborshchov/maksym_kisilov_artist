@font-face {
  font-family: "EsqaderoRegular";
  src: url(<%= asset_url('EsqaderoRegular.eot') %>);
  src: url(<%= asset_url('EsqaderoRegular.eot?#iefix') %>) format("embedded-opentype"),
    url(<%= asset_url('EsqaderoRegular.woff') %>) format("woff"),
    url(<%= asset_url('EsqaderoRegular.ttf') %>) format("truetype");
  font-style: normal;
  font-weight: normal;
}

@font-face {
  font-family: "AdventureRegular";
  src: url(<%= asset_url('AdventureRegular.ttf') %>);
}

